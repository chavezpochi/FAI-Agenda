<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddContact"
    android:background="@drawable/background">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/standard_45"
        android:paddingTop="@dimen/standard_65"
        android:paddingEnd="@dimen/standard_45"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userphoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_contact" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Perfil de Contacto"
                android:textColor="@color/primaryTextColor" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nombre"
                android:inputType="text"
                android:textColor="@color/primaryTextColor"
                android:textColorHint="@color/primaryTextColor" />

            <EditText
                android:id="@+id/userphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Numero Telefono"
                android:inputType="phone"
                android:textColorHint="@color/primaryTextColor" />

            <EditText
                android:id="@+id/userdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:hint="Nacimiento: aaaa/mm/dd"
                android:inputType="date"
                android:textColor="@color/primaryTextColor"
                android:textColorHint="@color/primaryTextColor">

            </EditText>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:text="OK" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>